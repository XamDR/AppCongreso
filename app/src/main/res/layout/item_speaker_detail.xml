<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	tools:context=".ui.speakers.SpeakerListFragment">

	<ImageView
		android:id="@+id/imgPonente"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:contentDescription="@string/imgponente"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintEnd_toStartOf="@id/nombrePonente"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		tools:src="@tools:sample/avatars" />

	<TextView
		android:id="@+id/nombrePonente"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/imgPonente"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/descPonente"
		tools:text="Linsday Maldonado"/>

	<TextView
		android:id="@+id/descPonente"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:maxLines="3"
		android:singleLine="false"
		android:ellipsize="end"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imgPonente"
		app:layout_constraintTop_toBottomOf="@id/nombrePonente"
		tools:text="Descripcion ponente"/>
</androidx.constraintlayout.widget.ConstraintLayout>