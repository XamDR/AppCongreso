<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".ui.pdf.SignaturePanelFragment">

	<org.grupotres.appcongreso.ui.customviews.TouchDrawingView
		android:id="@+id/drawing_view"
		android:layout_width="0dp"
		android:layout_height="300dp"
		android:layout_margin="10dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/btn_signature"
		app:layout_constraintTop_toTopOf="parent"/>

	<ImageButton
		android:id="@+id/btn_signature"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@null"
		android:contentDescription="@string/signature"
		app:srcCompat="@drawable/ic_sign_here"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="@id/drawing_view"/>

	<View
		android:id="@+id/placeholder"
		android:layout_width="0dp"
		android:layout_height="1dp"
		android:layout_margin="5dp"
		android:background="?attr/colorOnSurface"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/drawing_view"/>

	<TextView
		android:id="@+id/text_placeholder"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/signature_here"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/placeholder"/>

	<com.google.android.material.button.MaterialButton
		android:id="@+id/btn_add_signature"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:text="@string/add_signature"
		app:layout_constraintTop_toBottomOf="@id/text_placeholder"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/btn_clear_signature"/>

	<com.google.android.material.button.MaterialButton
		android:id="@+id/btn_clear_signature"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:text="@string/clear_signature"
		app:layout_constraintTop_toBottomOf="@id/text_placeholder"
		app:layout_constraintStart_toEndOf="@id/btn_add_signature"
		app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>