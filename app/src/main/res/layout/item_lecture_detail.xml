<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/recyclerview_item_background"
	android:paddingTop="10dp"
	tools:context=".ui.lectures.LectureListFragment">

	<ImageView
		android:id="@+id/speaker_photo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:contentDescription="@string/imgponente"
		app:layout_constraintBottom_toTopOf="@id/lecture_desc"
		app:layout_constraintEnd_toStartOf="@+id/lecture_title"
		app:layout_constraintStart_toStartOf="parent"
		tools:src="@tools:sample/avatars" />

	<TextView
		android:id="@+id/lecture_title"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="5dp"
		android:ellipsize="end"
		android:maxLines="5"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
		android:textColor="@color/white"
		android:textStyle="bold|italic"
		app:layout_constraintBottom_toTopOf="@id/speaker_name"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/speaker_photo"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="La informática en el desarrollo minero en el Perú" />

	<TextView
		android:id="@+id/speaker_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:maxLines="1"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
		android:textColor="@color/white"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/speaker_photo"
		app:layout_constraintTop_toBottomOf="@id/lecture_title"
		app:layout_constraintBottom_toTopOf="@id/lecture_desc"
		tools:text="Linsday Maldonado" />

	<TextView
		android:id="@+id/lecture_desc"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
		android:textColor="@color/white"
		android:autoLink="web"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/speaker_name"
		app:layout_constraintBottom_toTopOf="@id/lecture_date_time"
		tools:text="Descripcion ponencia" />

	<TextView
		android:id="@+id/lecture_date_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:maxLines="1"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
		android:textColor="@color/dracula_light"
		android:textStyle="italic"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@id/lecture_desc"
		tools:text="21/09/2021 9:00 a.m." />
</androidx.constraintlayout.widget.ConstraintLayout>