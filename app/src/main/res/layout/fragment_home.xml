<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".ui.home.HomeFragment">

	<TextView
		android:id="@+id/welcome"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:layout_marginBottom="30dp"
		android:padding="10dp"
		android:text="@string/welcome"
		android:textStyle="bold"
		style="@style/TextAppearance.MaterialComponents.Headline3"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@id/logo"/>

	<ImageView
		android:id="@+id/logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:padding="10dp"
		android:contentDescription="@string/logo_desc"
		android:scaleType="fitXY"
		app:srcCompat="@mipmap/ic_launcher_round"
		app:layout_constraintTop_toBottomOf="@id/welcome"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@id/advertisements"/>

	<TextView
		android:id="@+id/advertisements"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:padding="10dp"
		android:text="@string/advertisements"
		android:textStyle="bold"
		style="@style/TextAppearance.MaterialComponents.Headline4"
		app:layout_constraintTop_toBottomOf="@id/logo"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@id/img2"/>

	<ImageView
		android:id="@+id/img1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:padding="10dp"
		android:contentDescription="@string/logo_desc"
		android:scaleType="fitXY"
		app:srcCompat="@mipmap/ic_launcher_round"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toStartOf="@id/img2"
		app:layout_constraintTop_toBottomOf="@id/advertisements"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<ImageView
		android:id="@+id/img2"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:padding="10dp"
		android:contentDescription="@string/logo_desc"
		android:scaleType="fitXY"
		app:srcCompat="@mipmap/ic_launcher_round"
		app:layout_constraintStart_toEndOf="@id/img1"
		app:layout_constraintEnd_toStartOf="@id/img3"
		app:layout_constraintTop_toBottomOf="@id/advertisements"
		app:layout_constraintBottom_toBottomOf="parent"/>

	<ImageView
		android:id="@+id/img3"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:padding="10dp"
		android:contentDescription="@string/logo_desc"
		android:scaleType="fitXY"
		app:srcCompat="@mipmap/ic_launcher_round"
		app:layout_constraintStart_toEndOf="@id/img2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/advertisements"
		app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>