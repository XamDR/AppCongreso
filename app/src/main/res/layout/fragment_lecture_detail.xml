<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".ui.lectures.LectureDetailFragment">


	<TextView
		android:id="@+id/lecture_title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
		android:textStyle="bold|italic"
		app:layout_constraintBottom_toTopOf="@+id/speaker_photo"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.842"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.722"
		tools:text="La informática en el desarrollo minero en el Perú" />

	<ImageView
		android:id="@+id/speaker_photo"
		android:layout_width="257dp"
		android:layout_height="147dp"
		android:layout_marginTop="80dp"
		android:contentDescription="@string/imgponente"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:src="@tools:sample/avatars" />

	<TextView
		android:id="@+id/lecure_detail"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="36dp"
		android:maxLines="1"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@+id/speaker_name"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/speaker_photo"
		app:layout_constraintVertical_bias="0.0"
		tools:text="Detalle de la ponencia" />

	<TextView
		android:id="@+id/speaker_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="68dp"
		android:maxLines="1"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.498"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/speaker_photo"
		tools:text="Linsday Maldonado" />

	<TextView
		android:id="@+id/speaker_info"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/speaker_name"
		app:layout_constraintVertical_bias="0.032"
		tools:text="InfoPonente" />

	<Button
		android:layout_width="142dp"
		android:layout_height="41dp"
		android:text="Inscribirse"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.501"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/speaker_info"
		app:layout_constraintVertical_bias="0.057"

		></Button>


</androidx.constraintlayout.widget.ConstraintLayout>