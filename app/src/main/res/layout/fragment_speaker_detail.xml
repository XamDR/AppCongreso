<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.speakers.SpeakerDetailFragment">

	<ImageView
		android:id="@+id/speaker_photo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:contentDescription="@string/imgponente"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/speaker_name"
		tools:src="@tools:sample/avatars" />

	<TextView
		android:id="@+id/speaker_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="10dp"
		android:maxLines="1"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
		android:textStyle="bold"
		app:layout_constraintEnd_toStartOf="@id/speaker_country"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/speaker_photo"
		app:layout_constraintBottom_toTopOf="@id/info"
		tools:text="Linsday Maldonado" />

	<ImageView
		android:id="@+id/speaker_country"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		app:layout_constraintStart_toEndOf="@id/speaker_name"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/speaker_photo"
		app:layout_constraintBottom_toTopOf="@id/info"
		android:contentDescription="@string/flag"
		android:scaleType="fitXY"
		tools:src="@drawable/ic_google"/>

	<FrameLayout
		android:id="@+id/info"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="20dp"
		android:padding="10dp"
		android:background="@color/primaryLightColor"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/speaker_name">

		<TextView
			android:id="@+id/speaker_info"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
			android:justificationMode="inter_word"
			tools:text="InformaciÃ³n del ponente"
			tools:targetApi="o" />
	</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>