<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/mobile_navigation"
	app:startDestination="@+id/nav_home">

	<fragment
		android:id="@+id/nav_home"
		android:name="org.grupotres.appcongreso.ui.home.HomeFragment"
		android:label="@string/menu_home"
		tools:layout="@layout/fragment_home" >

		<action
			android:id="@+id/action_home"
			app:destination="@id/nav_home"/>
	</fragment>

	<fragment
		android:id="@+id/nav_lecture_list"
		android:name="org.grupotres.appcongreso.ui.lectures.LectureListFragment"
		android:label="@string/menu_lecture_list"
		tools:layout="@layout/fragment_lecture_list">

		<!--suppress AndroidElementNotAllowed -->
		<action
			android:id="@+id/action_home"
			app:destination="@id/nav_lecture_list"/>

		<!--suppress AndroidElementNotAllowed -->
		<argument
			android:name="lectureSpeaker"
			app:argType="org.grupotres.appcongreso.core.LectureSpeakers" />

		<!--suppress AndroidElementNotAllowed -->
		<action
			android:id="@+id/action_nav_lecture_list_to_lecture_detail"
			app:destination="@id/lectureDetailFragment">
			<!--suppress AndroidElementNotAllowed -->
			<argument
				android:name="lectureSpeaker"
				app:argType="org.grupotres.appcongreso.core.LectureSpeakers" />
		</action>

	</fragment>

	<fragment
		android:id="@+id/nav_speaker_list"
		android:name="org.grupotres.appcongreso.ui.speakers.SpeakerListFragment"
		android:label="@string/menu_speaker_list"
		tools:layout="@layout/fragment_speaker_list" >

		<action
			android:id="@+id/action_home"
			app:destination="@id/nav_speaker_list"/>
    
		<argument
			android:name="speaker"
			app:argType="org.grupotres.appcongreso.core.Speaker" />
    
		<action
			android:id="@+id/action_nav_speaker_list_to_speaker_detail"
			app:destination="@id/speakerDetailFragment">
			<argument
				android:name="speaker"
				app:argType="org.grupotres.appcongreso.core.Speaker" />
		</action>
	</fragment>

	<fragment
		android:id="@+id/lectureDetailFragment"
		android:name="org.grupotres.appcongreso.ui.lectures.LectureDetailFragment"
		android:label="@string/fragment_lecture_detail"
		tools:layout="@layout/fragment_lecture_detail" />

	<fragment
		android:id="@+id/speakerDetailFragment"
		android:name="org.grupotres.appcongreso.ui.speakers.SpeakerDetailFragment"
		android:label="@string/fragment_speaker_detail"
		tools:layout="@layout/fragment_speaker_detail" />

	<fragment
		android:id="@+id/nav_resources"
		android:name="org.grupotres.appcongreso.ui.resources.ResourcesFragment"
		android:label="Resources"
		tools:layout="@layout/fragment_resources" />

	<fragment
		android:id="@+id/mapsFragment"
		android:name="org.grupotres.appcongreso.ui.map.MapsFragment"
		android:label="fragment_maps"
		tools:layout="@layout/fragment_maps" />
</navigation>